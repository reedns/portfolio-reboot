.cards
  - @projects.each do |project|
    .card
      .card-image
        %img{:alt => "", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png"}/
      .card-header
        = project.name
      .card-copy
        %p= project.description
        = link_to 'Delete', project, method: :delete, data: 'Are you sure?' if admin_signed_in?
        |
        = link_to 'Edit', edit_project_path(project) if admin_signed_in?
      .card-stats
        %ul
          - project.tech_array.each do |tech|
            %li
              = tech

= link_to "New Project", new_project_path if admin_signed_in?
